<div class="field">
  <%= f.label field.name, field.label, class: 'label' %>
  <div class="control">
    <%= f.select field.name, options_for_select(field.collection, field.value), {include_blank: field.include_blank?}, id: field.id, placeholder: field.prompt, disabled: field.access_readonly?, multiple: true %>
  </div>
  <% if field.hint.present? %>
    <p class="help"><%= field.hint %></p>
  <% end %>
</div>

<script>
  document.addEventListener("turbolinks:load", function() {
    $('#<%= field.id %>').selectize({
      create: <%= field.can_custom_value? %>,
      maxItems: <%= field.max_items_size %>
    });
  });
</script>
